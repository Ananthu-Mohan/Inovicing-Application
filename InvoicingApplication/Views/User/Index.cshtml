@model IEnumerable<LoginModelClass>
@{
    Layout = "_UsersLayout";
}
@{
    ViewData["Title"] = "Index";
}

@*<h1>Index Category</h1>*@
<div class="container p-3">
    <div class="row pt-2">
        <div class="col-6">
            <h2 class="text-primary">Users List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-area="" asp-controller="User" asp-action="CreateUser">
                <i class="bi bi-plus-circle"></i> &nbsp; Create a new user
            </a>
        </div>
    </div>
    <br /> <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Email
                </th>
                <th>

                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var IdentityTableObjects in Model)
            {
                @if (IdentityTableObjects.Email != "admin@admin.com" && IdentityTableObjects.Email != ViewBag.Email)
                {
                    <tr>
                        <td style="width:50%">
                            @IdentityTableObjects.Email
                        </td>
                        <td style="width:30%">
                            <a asp-controller="User" asp-action="EditOtherUser" asp-route-id="@IdentityTableObjects.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        </td>
                        <td style="width:30%">
                            <a asp-controller="User" asp-action="Delete" asp-route-id="@IdentityTableObjects.Id" class="btn btn-primary">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>